<style>
  .product-section-{{ section.id }} {
    --color-wine: #D59DAA;
    --color-bg: #FEFBF9;
    --color-shadow: #6B7280;
    --color-white: #FFFFFF;
    background-color: var(--color-bg);
    padding: {{ section.settings.padding_top_mobile }}px 0 {{ section.settings.padding_bottom_mobile }}px;
  }
  
  @media (min-width: 768px) {
    .product-section-{{ section.id }} {
      padding: {{ section.settings.padding_top_tablet }}px 0 {{ section.settings.padding_bottom_tablet }}px;
    }
  }
  
  @media (min-width: 1280px) {
    .product-section-{{ section.id }} {
      padding: {{ section.settings.padding_top_desktop }}px 0 {{ section.settings.padding_bottom_desktop }}px;
    }
  }

  .product-section-{{ section.id }} .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .product-section-{{ section.id }} .section-header {
    text-align: center;
    margin-bottom: 40px;
  }

  .product-section-{{ section.id }} .section-title {
    font-size: 32px;
    font-weight: 600;
    color: var(--color-wine);
    margin-bottom: 20px;
  }

  .product-section-{{ section.id }} .btn-shop {
    display: inline-block;
    background: var(--color-wine);
    color: var(--color-white);
    padding: 14px 32px;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .product-section-{{ section.id }} .btn-shop:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(41, 2, 23, 0.2);
  }

  .product-section-{{ section.id }} .products-wrapper {
    margin-top: 60px;
    overflow: hidden;
    position: relative;
  }

  .product-section-{{ section.id }} .products-grid {
    display: flex;
    gap: 20px;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scrollbar-width: none;
    -webkit-overflow-scrolling: touch;
    padding: 0 20px 20px 20px;
    margin: 0 -20px;
    scroll-behavior: smooth;
  }

  .product-section-{{ section.id }} .products-grid::-webkit-scrollbar {
    display: none;
  }

  /* Desktop Scroll Buttons */
  .product-section-{{ section.id }} .scroll-btn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    color: #D59DAA;
    width: 48px;
    height: 48px;
    background: var(--color-white);
    border: 2px solid var(--color-wine);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 10;
    transition: all 0.3s ease;
    box-shadow: 0 4px 12px rgba(41, 2, 23, 0.15);
  }

  .product-section-{{ section.id }} .scroll-btn:hover {
    background: var(--color-wine);
    color: var(--color-white);
    transform: translateY(-50%) scale(1.1);
  }

  .product-section-{{ section.id }} .scroll-btn:disabled {
    opacity: 0.3;
    cursor: not-allowed;
    pointer-events: none;
  }

  .product-section-{{ section.id }} .scroll-btn-left {
    left: 10px;
  }

  .product-section-{{ section.id }} .scroll-btn-right {
    right: 10px;
  }

  .product-section-{{ section.id }} .scroll-btn svg {
    width: 20px;
    height: 20px;
  }

  /* MOBILE SCROLL BUTTONS - Floating on sides */
  @media (max-width: 767px) {
    .product-section-{{ section.id }} .mobile-scroll-btn {
      display: block !important;
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      width: 36px;
      height: 36px;
      background: var(--color-white);
      border: 2px solid var(--color-wine);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      z-index: 100;
      transition: all 0.3s ease;
      box-shadow: 0 4px 12px rgba(41, 2, 23, 0.15);
      opacity: 0.9;
    }
    
    .product-section-{{ section.id }} .mobile-scroll-btn:hover {
      background: var(--color-wine);
      transform: translateY(-50%) scale(1.1);
      opacity: 1;
    }
    
    .product-section-{{ section.id }} .mobile-scroll-btn svg {
      width: 16px;
      height: 16px;
      color: var(--color-wine);
    }
    
    .product-section-{{ section.id }} .mobile-scroll-btn:hover svg {
      color: var(--color-white);
    }
    
    .product-section-{{ section.id }} .mobile-scroll-left {
      left: 5px;
    }
    
    .product-section-{{ section.id }} .mobile-scroll-right {
      right: 5px;
    }
    
    /* Make products wrapper relative for positioning buttons */
    .product-section-{{ section.id }} .products-wrapper {
      position: relative;
    }
    
    /* Hide buttons when at start/end of scroll */
    .product-section-{{ section.id }} .mobile-scroll-btn.disabled {
      opacity: 0.3;
      cursor: not-allowed;
      pointer-events: none;
    }
    
    /* Adjust container padding to make room for buttons */
    .product-section-{{ section.id }} .container {
      position: relative;
    }
    
    /* Hide desktop scroll buttons on mobile */
    .product-section-{{ section.id }} .scroll-btn {
      display: none !important;
    }
  }

  /* Hide mobile buttons on tablet and desktop */
  @media (min-width: 768px) {
    .product-section-{{ section.id }} .mobile-scroll-btn {
      display: none !important;
    }
  }

  /* Mobile: 1 card at a time - 320px */
  .product-section-{{ section.id }} .video-card,
  .product-section-{{ section.id }} .product-card {
    flex: 0 0 320px;
    scroll-snap-align: start;
    scroll-snap-stop: always;
  }

  /* Tablet: 1 card at a time - 340px */
  @media (min-width: 768px) {
    .product-section-{{ section.id }} .video-card,
    .product-section-{{ section.id }} .product-card {
      flex: 0 0 340px;
    }
    
    .product-section-{{ section.id }} .products-grid {
      gap: 30px;
    }
  }

  /* Desktop: Show 4 cards, scroll if more than 4 */
  @media (min-width: 1024px) {
    .product-section-{{ section.id }} .products-wrapper {
      max-width: 100%;
    }

    .product-section-{{ section.id }} .products-grid {
      gap: 40px;
      padding: 0 0 20px 0;
      margin: 0;
    }

    .product-section-{{ section.id }} .video-card,
    .product-section-{{ section.id }} .product-card {
      flex: 0 0 calc(25% - 30px);
      min-width: 280px;
      scroll-snap-align: start;
    }

    /* If 4 or fewer cards, center them and hide scroll buttons */
    .product-section-{{ section.id }} .products-grid[data-card-count="1"],
    .product-section-{{ section.id }} .products-grid[data-card-count="2"],
    .product-section-{{ section.id }} .products-grid[data-card-count="3"],
    .product-section-{{ section.id }} .products-grid[data-card-count="4"] {
      justify-content: center;
      overflow-x: hidden;
    }

    .product-section-{{ section.id }} .products-wrapper[data-card-count="1"] .scroll-btn,
    .product-section-{{ section.id }} .products-wrapper[data-card-count="2"] .scroll-btn,
    .product-section-{{ section.id }} .products-wrapper[data-card-count="3"] .scroll-btn,
    .product-section-{{ section.id }} .products-wrapper[data-card-count="4"] .scroll-btn {
      display: none;
    }
  }

  @media (min-width: 1280px) {
    .product-section-{{ section.id }} .video-card,
    .product-section-{{ section.id }} .product-card {
      flex: 0 0 calc(25% - 30px);
      min-width: 300px;
    }
  }

  /* VIDEO CARD STYLES - Applied to all blocks */
  .product-section-{{ section.id }} .video-card {
    background: #000;
    border-radius: 20px;
    overflow: hidden;
    position: relative;
    border: 1px solid rgba(41, 2, 23, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    min-height: 500px;
    display: flex;
    flex-direction: column;
    cursor: pointer;
  }

  .product-section-{{ section.id }} .video-card a {
    display: block;
    text-decoration: none;
  }

  .product-section-{{ section.id }} .video-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 24px rgba(41, 2, 23, 0.15);
  }

  /* Video Container */
  .product-section-{{ section.id }} .video-container {
    position: relative;
    width: 100%;
    height: 100%;
    min-height: 500px;
    overflow: hidden;
  }

  .product-section-{{ section.id }} .product-video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  /* Overlay Content - Default State */
  .product-section-{{ section.id }} .video-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom, rgba(65, 61, 63, 0.47), rgba(175, 169, 172, 0.31));
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 40px;
    text-align: center;
    z-index: 2;
    transition: opacity 0.5s ease;
    opacity: 1;
  }

  .product-section-{{ section.id }} .video-card:hover .video-overlay {
    opacity: 0;
  }

  /* Product Info Overlay */
  .product-section-{{ section.id }} .product-info {
    color: var(--color-white);
    text-align: center;
    width: 100%;
  }

  .product-section-{{ section.id }} .product-name {
    font-size: 24px;
    font-weight: 600;
    margin-bottom: 10px;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  }

  .product-section-{{ section.id }} .product-description-overlay {
    font-size: 16px;
    margin-bottom: 20px;
    opacity: 0.9;
    line-height: 1.4;
  }

  .product-section-{{ section.id }} .product-price {
    font-size: 20px;
    font-weight: 700;
    color: var(--color-white);
    margin-bottom: 20px;
  }

  /* Feature Tags in Overlay */
  .product-section-{{ section.id }} .feature-tags-overlay {
    display: flex;
    gap: 10px;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 20px;
  }

  .product-section-{{ section.id }} .feature-tag-overlay {
    background: rgba(255, 255, 255, 0.2);
    color: var(--color-white);
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    backdrop-filter: blur(5px);
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  /* CTA Button */
  .product-section-{{ section.id }} .video-cta {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    background: var(--color-white);
    color: var(--color-wine);
    padding: 14px 36px;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 600;
    display: inline-block;
    transition: all 0.3s ease;
    border: 2px solid var(--color-wine);
    z-index: 3;
    white-space: nowrap;
  }

  .product-section-{{ section.id }} .video-cta:hover {
    background: var(--color-wine);
    color: var(--color-white);
    transform: translateX(-50%) scale(1.05);
  }

  /* Badge Styles for Video Cards */
  .product-section-{{ section.id }} .video-badge {
    position: absolute;
    top: 12px;
    left: 12px;
    background: var(--color-white);
    color: var(--color-wine);
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 11px;
    font-weight: 700;
    text-transform: uppercase;
    border: 1px solid #D5D5D5;
    z-index: 4;
  }

  .product-section-{{ section.id }} .video-award-badge {
    position: absolute;
    top: 12px;
    right: 12px;
    width: 60px;
    height: 60px;
    z-index: 4;
  }

  .product-section-{{ section.id }} .bogo-badge-video {
    position: absolute;
    top: -10px;
    right: -10px;
    background: #E91E63;
    color: white;
    padding: 20px 16px;
    border-radius: 50%;
    font-size: 10px;
    font-weight: 700;
    text-align: center;
    line-height: 1.2;
    box-shadow: 0 4px 12px rgba(233, 30, 99, 0.4);
    z-index: 4;
    text-transform: uppercase;
  }

  /* Reviews in Overlay */
  .product-section-{{ section.id }} .reviews-overlay {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 15px;
    font-size: 14px;
    color: #FFA500;
    justify-content: center;
  }

  /* Mobile adjustments for video cards */
  @media (max-width: 767px) {
    .product-section-{{ section.id }} .product-name {
      font-size: 20px;
    }
    
    .product-section-{{ section.id }} .product-description-overlay {
      font-size: 14px;
    }
    
    .product-section-{{ section.id }} .video-cta {
      padding: 12px 24px;
      font-size: 14px;
      bottom: 20px;
    }
    
    .product-section-{{ section.id }} .video-award-badge {
      width: 50px;
      height: 50px;
    }
  }

  @media (min-width: 1024px) {
    .product-section-{{ section.id }} .video-award-badge {
      width: 80px;
      height: 80px;
    }
    
    .product-section-{{ section.id }} .product-name {
      font-size: 28px;
    }
  }

  @media (max-width: 1023px) {
    .product-section-{{ section.id }} .video-card.desktop-only {
      display: none;
    }
  }
</style>

<div class="product-section-{{ section.id }}">
  <div class="container">
    {% if section.settings.title != blank %}
      <div class="section-header">
        <h2 class="section-title">{{ section.settings.title }}</h2>
        {% if section.settings.button_text != blank %}
          <a href="{{ section.settings.button_link }}" class="btn-shop">
            {{ section.settings.button_text }}
          </a>
        {% endif %}
      </div>
    {% endif %}

    <div class="products-wrapper" data-card-count="{{ section.blocks.size }}">
      <!-- Desktop Scroll Buttons -->
      <button class="scroll-btn scroll-btn-left" 
              onclick="scrollProducts(-400)">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
      </button>
      
      <button class="scroll-btn scroll-btn-right" 
              onclick="scrollProducts(400)">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="9 18 15 12 9 6"></polyline>
        </svg>
      </button>
      
      <!-- Mobile Scroll Buttons - Floating on sides -->
      <button class="mobile-scroll-btn mobile-scroll-left" 
              onclick="scrollProductsMobile(-320)">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
      </button>
      
      <button class="mobile-scroll-btn mobile-scroll-right" 
              onclick="scrollProductsMobile(320)">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="9 18 15 12 9 6"></polyline>
        </svg>
      </button>
      
      <div class="products-grid" data-card-count="{{ section.blocks.size }}">
        {% comment %} VIDEO CARDS - Each block becomes a video card {% endcomment %}
        {% for block in section.blocks %}
          {% if block.type == 'product' %}
            {% assign product = block.settings.product %}
            
            <div class="video-card" {{ block.shopify_attributes }} data-video-index="{{ forloop.index0 }}">
              <div class="video-container">
                {% if block.settings.video_url != blank %}
                  <video 
                    class="product-video"
                    preload="metadata"
                    muted
                    loop
                    playsinline
                    poster="{{ block.settings.video_poster | image_url: width: 800 }}"
                    data-video-index="{{ forloop.index0 }}"
                  >
                    <source src="{{ block.settings.video_url }}" type="video/mp4">
                    Your browser does not support the video tag.
                  </video>
                {% elsif product.featured_image %}
                  <!-- Fallback to product image if no video -->
                  <img src="{{ product.featured_image | image_url: width: 900 }}" 
                       alt="{{ product.featured_image.alt | escape }}" 
                       class="product-video">
                {% else %}
                  <!-- Placeholder if no video or image -->
                  <img src="https://placehold.co/800x500/290217/ffffff?text=Video+Placeholder" 
                       alt="Product video" 
                       class="product-video">
                {% endif %}
                
                {% if block.settings.badge_text != blank %}
                  <span class="video-badge">{{ block.settings.badge_text }}</span>
                {% endif %}
                
                {% if block.settings.award_image != blank %}
                  <img src="{{ block.settings.award_image | image_url: width: 160 }}" 
                       alt="Award" 
                       class="video-award-badge"
                       loading="lazy">
                {% endif %}

                {% if block.settings.show_bogo %}
                  <div class="bogo-badge-video">Buy 1<br>Get 1<br>FREE</div>
                {% endif %}
                
                <!-- Overlay content that disappears on hover -->
                <div class="video-overlay">
                  <div class="product-info">
                    {% if block.settings.show_reviews %}
                      <div class="reviews-overlay">
                        ★★★★★ <span style="color: var(--color-white); opacity: 0.9;">4.7 / 5</span>
                      </div>
                    {% endif %}
                    
                    <h3 class="product-name">{{ product.title }}</h3>
                    
                    {% if block.settings.description != blank %}
                      <div class="product-description-overlay">
                        {{ block.settings.description }}
                      </div>
                    {% endif %}
                    
                    <div class="product-price">
                      {% if product.compare_at_price > product.price %}
                        <span style="text-decoration: line-through; opacity: 0.7; margin-right: 8px;">
                          {{ product.compare_at_price | money }}
                        </span>
                      {% endif %}
                      {{ product.price | money }}
                    </div>
                    
                    {% if block.settings.feature_tag_1 != blank or block.settings.feature_tag_2 != blank %}
                      <div class="feature-tags-overlay">
                        {% if block.settings.feature_tag_1 != blank %}
                          <span class="feature-tag-overlay">{{ block.settings.feature_tag_1 }}</span>
                        {% endif %}
                        {% if block.settings.feature_tag_2 != blank %}
                          <span class="feature-tag-overlay">{{ block.settings.feature_tag_2 }}</span>
                        {% endif %}
                      </div>
                    {% endif %}
                  </div>
                </div>
                
                <!-- CTA button that stays visible -->
                <a href="{{ product.url }}" class="video-cta">
                  {% if product.available %}
                    SHOP NOW
                  {% else %}
                    SOLD OUT
                  {% endif %}
                </a>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<script>
  // Function to handle video play on hover for all video cards
  document.addEventListener('DOMContentLoaded', function() {
    const videoCards = document.querySelectorAll('.video-card');
    
    videoCards.forEach((card, index) => {
      const video = card.querySelector('.product-video');
      
      if (video && video.tagName === 'VIDEO') {
        // Add event listeners for mouse hover
        card.addEventListener('mouseenter', function() {
          video.play().catch(e => {
            console.log("Video autoplay prevented for card", index, ":", e);
          });
        });
        
        card.addEventListener('mouseleave', function() {
          video.pause();
          video.currentTime = 0;
        });
        
        // For touch devices (mobile/tablet)
        card.addEventListener('touchstart', function(e) {
          e.preventDefault();
          if (video.paused) {
            video.play().catch(e => console.log("Video autoplay prevented:", e));
          } else {
            video.pause();
            video.currentTime = 0;
          }
        });
        
        // Pause all other videos when one starts playing
        video.addEventListener('play', function() {
          videoCards.forEach((otherCard, otherIndex) => {
            if (otherIndex !== index) {
              const otherVideo = otherCard.querySelector('.product-video');
              if (otherVideo && otherVideo.tagName === 'VIDEO') {
                otherVideo.pause();
                otherVideo.currentTime = 0;
              }
            }
          });
        });
      } else if (video && video.tagName === 'IMG') {
        // If it's an image (fallback), add a class for styling
        card.classList.add('has-image-fallback');
      }
    });
    
    // Initialize scroll buttons
    initScrollButtons();
  });
  
  // Scroll function for desktop buttons
  function scrollProducts(distance) {
    const grid = document.querySelector('.product-section-{{ section.id }} .products-grid');
    if (grid) {
      grid.scrollBy({ left: distance, behavior: 'smooth' });
      updateScrollButtons();
    }
  }
  
  // Scroll function for mobile buttons - scrolls one card width
  function scrollProductsMobile(distance) {
    const grid = document.querySelector('.product-section-{{ section.id }} .products-grid');
    if (grid) {
      grid.scrollBy({ left: distance, behavior: 'smooth' });
      // Update button states after scroll
      setTimeout(updateScrollButtons, 300);
    }
  }
  
  // Initialize scroll buttons state
  function initScrollButtons() {
    const grid = document.querySelector('.product-section-{{ section.id }} .products-grid');
    if (grid) {
      grid.addEventListener('scroll', updateScrollButtons);
      updateScrollButtons(); // Set initial state
    }
  }
  
  // Update scroll button enabled/disabled state
  function updateScrollButtons() {
    const grid = document.querySelector('.product-section-{{ section.id }} .products-grid');
    if (!grid) return;
    
    const leftButtons = document.querySelectorAll('.product-section-{{ section.id }} .scroll-btn-left, .product-section-{{ section.id }} .mobile-scroll-left');
    const rightButtons = document.querySelectorAll('.product-section-{{ section.id }} .scroll-btn-right, .product-section-{{ section.id }} .mobile-scroll-right');
    
    const scrollLeft = grid.scrollLeft;
    const scrollWidth = grid.scrollWidth;
    const clientWidth = grid.clientWidth;
    const scrollRight = scrollWidth - clientWidth - scrollLeft;
    
    // Disable left button if at start
    if (scrollLeft <= 10) {
      leftButtons.forEach(btn => {
        btn.classList.add('disabled');
        btn.disabled = true;
      });
    } else {
      leftButtons.forEach(btn => {
        btn.classList.remove('disabled');
        btn.disabled = false;
      });
    }
    
    // Disable right button if at end
    if (scrollRight <= 10) {
      rightButtons.forEach(btn => {
        btn.classList.add('disabled');
        btn.disabled = true;
      });
    } else {
      rightButtons.forEach(btn => {
        btn.classList.remove('disabled');
        btn.disabled = false;
      });
    }
  }
  
  // Also update on window resize
  window.addEventListener('resize', updateScrollButtons);
</script>

