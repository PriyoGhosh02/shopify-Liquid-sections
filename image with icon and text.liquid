{% comment %}
  Section: Image with icon text
  Displays a customizable features grid with image on left or right
{% endcomment %}

<style>
  .features-section-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
  }

  .features-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }
  .features-grid>.feature-item:before {
    content: " ";
}

  .features-wrapper {
    display: flex;
    align-items: center;
    gap: 60px;
    flex-wrap: wrap;
  }

  .features-wrapper.image-right {
    flex-direction: row-reverse;
  }

  .features-content {
    flex: 1;
    min-width: 300px;
  }

  .features-image {
    flex: 1;
    min-width: 300px;
  }

  .features-image img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: {{ section.settings.image_radius }}px;
  }

  .features-title {
    font-size: {{ section.settings.title_size }}px;
    font-weight: 400;
    margin: 0 0 40px 0;
    color: {{ section.settings.title_color }};
    line-height: 1.2;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
    gap: {{ section.settings.grid_gap }}px;
  }

  .feature-item {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .feature-icon {
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .feature-icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .feature-icon svg {
    width: 100%;
    height: 100%;
  }

  .feature-title {
    font-size: {{ section.settings.feature_title_size }}px;
    font-weight: 400;
    margin: 0;
    color: {{ section.settings.feature_title_color }};
    line-height: 1.4;
  }

  .feature-description {
    font-size: {{ section.settings.feature_desc_size }}px;
    margin: 0;
    color: {{ section.settings.feature_desc_color }};
    line-height: 1.5;
  }

  @media (max-width: 768px) {
    .features-wrapper {
      gap: 40px;
    }

    .features-wrapper.image-right {
      flex-direction: column;
    }

    .features-grid {
      grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr);
      gap: 30px;
    }

    .features-title {
      font-size: {{ section.settings.title_size | times: 0.7 }}px;
      margin-bottom: 30px;
    }
  }
</style>

<div class="features-section-{{ section.id }}">
  <div class="features-container">
    <div class="features-wrapper {% if section.settings.image_position == 'right' %}image-right{% endif %}">
      
      <div class="features-content">
        {% if section.settings.title != blank %}
          <h2 class="features-title">{{ section.settings.title }}</h2>
        {% endif %}

        <div class="features-grid">
          {% for block in section.blocks %}
            <div class="feature-item" {{ block.shopify_attributes }}>
              {% if block.settings.icon != blank %}
                <div class="feature-icon">
                  <img src="{{ block.settings.icon | img_url: 'master' }}" alt="{{ block.settings.title }}" loading="lazy">
                </div>
              {% endif %}

              {% if block.settings.title != blank %}
                <h3 class="feature-title">{{ block.settings.title }}</h3>
              {% endif %}

              {% if block.settings.description != blank %}
                <p class="feature-description">{{ block.settings.description }}</p>
              {% endif %}
            </div>
          {% endfor %}
        </div>
      </div>

      <div class="features-image">
        {% if section.settings.image != blank %}
          <img 
            src="{{ section.settings.image | img_url: '1200x' }}" 
            alt="{{ section.settings.image.alt | escape }}"
            loading="lazy"
            width="{{ section.settings.image.width }}"
            height="{{ section.settings.image.height }}">
        {% else %}
          {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>

    </div>
  </div>
</div>

{% schema %}
{
  "name": "Image with icon text",
  "settings": [
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image Position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
