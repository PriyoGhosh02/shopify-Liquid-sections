{%- liquid
  # Build array of category names for validation
  assign category_names = ''
  for block in section.blocks
    if block.type == 'category'
      if category_names != ''
        assign category_names = category_names | append: '|||'
      endif
      assign category_names = category_names | append: block.settings.category_name
    endif
  endfor
  assign categories_array = category_names | split: '|||'
-%}

<div class="faq-section" style="
  background: linear-gradient(to bottom right, {{ section.settings.bg_gradient_from }}, {{ section.settings.bg_gradient_to }});
  padding: {{ section.settings.padding_top }}px {{ section.settings.padding_horizontal }}px {{ section.settings.padding_bottom }}px;
">
  <div class="faq-container" style="max-width: {{ section.settings.container_width }}px;">
    
    {%- if section.settings.show_heading -%}
      <h1 class="faq-main-heading" style="
        color: {{ section.settings.heading_color }};
        font-size: {{ section.settings.heading_size }}px;
        text-align: {{ section.settings.heading_align }};
        margin-bottom: {{ section.settings.heading_margin }}px;
      ">
        {{ section.settings.heading }}
      </h1>
    {%- endif -%}

    <div class="faq-layout">
      
      {%- if section.settings.show_sidebar -%}
      <!-- Left Sidebar - Categories -->
      <div class="faq-sidebar" style="width: {{ section.settings.sidebar_width }}px;">
        <div class="faq-sidebar-inner" style="
          background: {{ section.settings.sidebar_bg }};
          border-radius: {{ section.settings.sidebar_radius }}px;
          padding: {{ section.settings.sidebar_padding }}px;
        ">
          
          <h2 class="sidebar-title" style="
            color: {{ section.settings.sidebar_title_color }};
            font-size: {{ section.settings.sidebar_title_size }}px;
            margin-bottom: {{ section.settings.sidebar_title_margin }}px;
          ">
            {{ section.settings.sidebar_title }}
          </h2>

          <nav class="category-nav">
            {%- for block in section.blocks -%}
              {%- if block.type == 'category' -%}
                {%- liquid
                  # Count FAQs in this category
                  assign faq_count = 0
                  for faq_block in section.blocks
                    if faq_block.type == 'faq'
                      assign faq_category = faq_block.settings.parent_category | strip | downcase
                      assign current_category = block.settings.category_name | strip | downcase
                      if faq_category == current_category
                        assign faq_count = faq_count | plus: 1
                      endif
                    endif
                  endfor
                -%}
                
                <button 
                  class="category-btn" 
                  data-category="{{ block.settings.category_name | strip | downcase | handleize }}"
                  data-category-name="{{ block.settings.category_name }}"
                  style="
                    --active-bg: {{ section.settings.active_category_bg }};
                    --active-color: {{ section.settings.active_category_color }};
                    --hover-bg: {{ section.settings.hover_category_bg }};
                    --category-color: {{ section.settings.category_color }};
                    border-radius: {{ section.settings.category_radius }}px;
                  "
                  {{ block.shopify_attributes }}
                >
                  {%- if block.settings.show_icon and block.settings.icon != blank -%}
                    <span class="category-icon">{{ block.settings.icon }}</span>
                  {%- endif -%}
                  {{ block.settings.category_name }}
                  {%- if block.settings.show_count -%}
                    <span class="faq-count">{{ faq_count }}</span>
                  {%- endif -%}
                </button>
              {%- endif -%}
            {%- endfor -%}
          </nav>

          {%- if section.settings.show_cta_box -%}
          <!-- CTA Section -->
          <div class="sidebar-cta" style="
            margin-top: {{ section.settings.cta_margin_top }}px;
            padding-top: {{ section.settings.cta_padding_top }}px;
          ">
            {%- if section.settings.cta_image != blank -%}
              <img 
                src="{{ section.settings.cta_image | image_url: width: 400 }}" 
                alt="{{ section.settings.cta_image.alt | escape }}"
                class="cta-image"
                loading="lazy"
                style="border-radius: {{ section.settings.cta_image_radius }}px;"
              >
            {%- endif -%}
            
            <h3 class="cta-title" style="
              color: {{ section.settings.cta_title_color }};
              font-size: {{ section.settings.cta_title_size }}px;
            ">
              {{ section.settings.cta_title }}
            </h3>
            
            <p class="cta-text" style="color: {{ section.settings.cta_text_color }};">
              {{ section.settings.cta_text }}
            </p>
            
            {%- if section.settings.cta_button_text != blank -%}
              <a 
                href="{{ section.settings.cta_button_link }}" 
                class="cta-button"
                style="
                  background: {{ section.settings.cta_button_bg }};
                  color: {{ section.settings.cta_button_color }};
                  border-radius: {{ section.settings.cta_button_radius }}px;
                "
              >
                {{ section.settings.cta_button_text }}
              </a>
            {%- endif -%}
            
            {%- if section.settings.cta_subtext != blank -%}
              <p class="cta-subtext" style="color: {{ section.settings.cta_subtext_color }};">
                {{ section.settings.cta_subtext }}
              </p>
            {%- endif -%}
          </div>
          {%- endif -%}
          
        </div>
      </div>
      {%- endif -%}

      <!-- Right Content - FAQ Items -->
      <div class="faq-content">
        <div class="faq-content-inner" style="
          background: {{ section.settings.content_bg }};
          border-radius: {{ section.settings.content_radius }}px;
          padding: {{ section.settings.content_padding }}px;
        ">
          
          {%- if section.settings.show_search -%}
          <!-- Search Bar -->
          <div class="faq-search-wrapper" style="margin-bottom: {{ section.settings.search_margin }}px;">
            {%- if section.settings.search_label != blank -%}
              <label class="search-label" style="
                color: {{ section.settings.search_label_color }};
                font-size: {{ section.settings.search_label_size }}px;
              ">
                {{ section.settings.search_label }}
              </label>
            {%- endif -%}
            
            <div class="search-input-wrapper">
              <input
                type="text"
                id="faq-search"
                placeholder="{{ section.settings.search_placeholder }}"
                class="faq-search-input"
                style="
                  border-radius: {{ section.settings.search_radius }}px;
                  border-color: {{ section.settings.search_border_color }};
                  --focus-color: {{ section.settings.search_focus_color }};
                "
              >
              {%- if section.settings.show_search_icon -%}
                <svg class="search-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                  <circle cx="11" cy="11" r="8"></circle>
                  <path d="m21 21-4.35-4.35"></path>
                </svg>
              {%- endif -%}
            </div>
          </div>
          {%- endif -%}

          <!-- Category Title -->
          <h2 class="category-title" style="
            color: {{ section.settings.category_title_color }};
            font-size: {{ section.settings.category_title_size }}px;
            margin-bottom: {{ section.settings.category_title_margin }}px;
          ">
            <span id="active-category-name">
              {%- for block in section.blocks -%}
                {%- if block.type == 'category' -%}
                  {{ block.settings.category_name }}
                  {%- break -%}
                {%- endif -%}
              {%- endfor -%}
            </span>
          </h2>

          <!-- FAQ Categories -->
          {%- for category_block in section.blocks -%}
            {%- if category_block.type == 'category' -%}
              {%- liquid
                assign category_slug = category_block.settings.category_name | strip | downcase | handleize
                assign category_name_lower = category_block.settings.category_name | strip | downcase
                
                # Count FAQs for this category
                assign category_faq_count = 0
                for faq_block in section.blocks
                  if faq_block.type == 'faq'
                    assign faq_category = faq_block.settings.parent_category | strip | downcase
                    if faq_category == category_name_lower
                      assign category_faq_count = category_faq_count | plus: 1
                    endif
                  endif
                endfor
              -%}
              
              <div 
                class="faq-category-group" 
                data-category-id="{{ category_slug }}"
                data-category-name="{{ category_block.settings.category_name }}"
                style="display: none;"
              >
                <div class="faq-accordion">
                  {%- assign has_faqs = false -%}
                  
                  {%- for faq_block in section.blocks -%}
                    {%- if faq_block.type == 'faq' -%}
                      {%- liquid
                        assign faq_category = faq_block.settings.parent_category | strip | downcase
                        assign current_category = category_block.settings.category_name | strip | downcase
                      -%}
                      
                      {%- if faq_category == current_category -%}
                        {%- assign has_faqs = true -%}
                        <div 
                          class="faq-item" 
                          data-search-content="{{ faq_block.settings.question | escape | downcase }} {{ faq_block.settings.answer | strip_html | escape | downcase }}"
                          data-faq-category="{{ faq_category }}"
                          style="border-color: {{ section.settings.faq_border_color }};"
                          {{ faq_block.shopify_attributes }}
                        >
                          <button 
                            class="faq-question"
                            style="
                              color: {{ section.settings.question_color }};
                              --hover-color: {{ section.settings.question_hover_color }};
                            "
                          >
                            <span class="question-text">{{ faq_block.settings.question }}</span>
                            <svg 
                              class="chevron-icon" 
                              width="24" 
                              height="24" 
                              viewBox="0 0 24 24" 
                              fill="none" 
                              stroke="currentColor"
                              style="color: {{ section.settings.chevron_color }};"
                            >
                              <polyline points="6 9 12 15 18 9"></polyline>
                            </svg>
                          </button>
                          
                          <div class="faq-answer-wrapper">
                            <div 
                              class="faq-answer" 
                              style="color: {{ section.settings.answer_color }};"
                            >
                              {{ faq_block.settings.answer }}
                            </div>
                          </div>
                        </div>
                      {%- endif -%}
                    {%- endif -%}
                  {%- endfor -%}
                  
                  {%- unless has_faqs -%}
                    <div class="empty-category">
                      <p>No FAQs available in this category yet.</p>
                      <p style="font-size: 13px; margin-top: 8px;">Add FAQ items with category: <strong>"{{ category_block.settings.category_name }}"</strong></p>
                    </div>
                  {%- endunless -%}
                </div>
              </div>
            {%- endif -%}
          {%- endfor -%}

          <!-- No Results Message -->
          <div class="no-results" style="display: none; color: {{ section.settings.no_results_color }};">
            <p>{{ section.settings.no_results_text }}</p>
          </div>

        </div>
      </div>

    </div>
  </div>
</div>

<script>
  class FAQCategories {
    constructor(section) {
      this.section = section;
      this.categoryBtns = section.querySelectorAll('.category-btn');
      this.categoryGroups = section.querySelectorAll('.faq-category-group');
      this.faqItems = section.querySelectorAll('.faq-item');
      this.searchInput = section.querySelector('#faq-search');
      this.categoryTitle = section.querySelector('#active-category-name');
      this.noResults = section.querySelector('.no-results');
      this.activeCategory = null;

      this.init();
    }

    init() {
      // Set first category as active
      if (this.categoryBtns.length > 0) {
        this.setActiveCategory(
          this.categoryBtns[0].dataset.category,
          this.categoryBtns[0].dataset.categoryName
        );
      }

      // Category click handlers
      this.categoryBtns.forEach(btn => {
        btn.addEventListener('click', (e) => {
          this.setActiveCategory(btn.dataset.category, btn.dataset.categoryName);
        });
      });

      // FAQ accordion handlers
      this.faqItems.forEach(item => {
        const question = item.querySelector('.faq-question');
        question.addEventListener('click', () => {
          this.toggleFAQ(item);
        });
      });

      // Search handler
      if (this.searchInput) {
        this.searchInput.addEventListener('input', (e) => {
          this.handleSearch(e.target.value);
        });
      }
    }

    setActiveCategory(categoryId, categoryName) {
      this.activeCategory = categoryId;

      // Update button states
      this.categoryBtns.forEach(btn => {
        btn.classList.toggle('active', btn.dataset.category === categoryId);
      });

      // Show/hide category groups
      this.categoryGroups.forEach(group => {
        group.style.display = group.dataset.categoryId === categoryId ? 'block' : 'none';
      });

      // Update category title
      if (this.categoryTitle && categoryName) {
        this.categoryTitle.textContent = categoryName;
      }

      // Reset search
      if (this.searchInput) {
        this.searchInput.value = '';
      }
      this.resetSearch();
    }

    toggleFAQ(item) {
      const isOpen = item.classList.contains('active');
      
      // Close all FAQs if accordion behavior is 'single'
      {% if section.settings.accordion_behavior == 'single' %}
      const activeCategoryGroup = this.section.querySelector(`.faq-category-group[data-category-id="${this.activeCategory}"]`);
      if (activeCategoryGroup) {
        activeCategoryGroup.querySelectorAll('.faq-item').forEach(faq => faq.classList.remove('active'));
      }
      {% endif %}

      // Toggle current FAQ
      item.classList.toggle('active', !isOpen);
    }

    handleSearch(query) {
      const searchTerm = query.toLowerCase().trim();
      
      if (searchTerm === '') {
        this.resetSearch();
        return;
      }

      let visibleCount = 0;

      // Search in active category only
      const activeGroup = this.section.querySelector(`.faq-category-group[data-category-id="${this.activeCategory}"]`);
      if (activeGroup) {
        const items = activeGroup.querySelectorAll('.faq-item');
        items.forEach(item => {
          const content = item.dataset.searchContent || '';
          const matches = content.includes(searchTerm);
          item.style.display = matches ? 'block' : 'none';
          if (matches) visibleCount++;
        });
      }

      // Show/hide no results message
      if (this.noResults) {
        this.noResults.style.display = visibleCount === 0 ? 'block' : 'none';
      }

      // Hide empty category message during search
      const emptyMsg = activeGroup?.querySelector('.empty-category');
      if (emptyMsg) {
        emptyMsg.style.display = 'none';
      }
    }

    resetSearch() {
      this.faqItems.forEach(item => {
        item.style.display = 'block';
      });
      if (this.noResults) {
        this.noResults.style.display = 'none';
      }
      
      // Show empty category messages if needed
      this.categoryGroups.forEach(group => {
        const emptyMsg = group.querySelector('.empty-category');
        if (emptyMsg) {
          emptyMsg.style.display = 'block';
        }
      });
    }
  }

  // Initialize all FAQ sections
  document.addEventListener('DOMContentLoaded', () => {
    const faqSections = document.querySelectorAll('.faq-section');
    faqSections.forEach(section => new FAQCategories(section));
  });

  // Reinitialize on Shopify theme editor events
  if (typeof Shopify !== 'undefined' && Shopify.designMode) {
    document.addEventListener('shopify:section:load', (event) => {
      new FAQCategories(event.target.querySelector('.faq-section'));
    });
  }
</script>

