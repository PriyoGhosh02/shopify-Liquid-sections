<style>
/* FAQ Categories - Main Styles */
.faq-section {
  min-height: 100vh;
}

.faq-container {
  margin: 0 auto;
  width: 100%;
}

.faq-main-heading {
  font-weight: 500;
  line-height: 1.2;
}

.faq-layout {
  display: flex;
  gap: 24px;
  align-items: flex-start;
}

/* Sidebar */
.faq-sidebar {
  flex-shrink: 0;
}

.faq-sidebar-inner {
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
  position: sticky;
  top: 20px;
}

.sidebar-title {
  font-weight: 600;
}

.category-nav {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.category-btn {
  width: 100%;
  text-align: left;
  padding: 12px 16px;
  border: none;
  background: transparent;
  color: var(--category-color);
  font-size: 24px;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
  gap: 8px;
}

.category-btn:hover {
  background: var(--hover-bg);
}

.category-btn.active {
  background: var(--active-bg);
  color: var(--active-color);
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
}

.category-icon {
  font-size: 18px;
}

.faq-count {
  margin-left: auto;
  background: rgba(0, 0, 0, 0.1);
  padding: 2px 8px;
  border-radius: 12px;
  font-size: 12px;
}

.category-btn.active .faq-count {
  background: rgba(255, 255, 255, 0.3);
}

/* CTA Box */
.sidebar-cta {
  border-top: 1px solid #e5e7eb;
}

.cta-image {
  width: 100%;
  height: auto;
  margin-bottom: 16px;
  object-fit: cover;
}

.cta-title {
  font-weight: 600;
  margin-bottom: 8px;
  font-size: 18px;
}

.cta-text {
  font-size: 14px;
  margin-bottom: 16px;
  line-height: 1.5;
}

.cta-button {
  display: block;
  width: 100%;
  padding: 12px 24px;
  text-align: center;
  text-decoration: none;
  font-weight: 600;
  font-size: 14px;
  transition: all 0.2s ease;
  letter-spacing: 0.5px;
}

.cta-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  opacity: 0.9;
}

.cta-subtext {
  font-size: 11px;
  text-align: center;
  margin-top: 8px;
  font-weight: 500;
}

/* Content Area */
.faq-content {
  flex: 1;
  min-width: 0;
}

.faq-content-inner {
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
}

/* Search */
.faq-search-wrapper {
  margin-bottom: 32px;
}

.search-label {
  display: block;
  font-weight: 600;
  margin-bottom: 12px;
  letter-spacing: 0.5px;
}

.search-input-wrapper {
  position: relative;
}

.faq-search-input {
  width: 100%;
  padding: 12px 48px 12px 16px;
  border: 2px solid;
  font-size: 15px;
  transition: all 0.2s ease;
  outline: none;
}

.faq-search-input:focus {
  border-color: var(--focus-color);
  box-shadow: 0 0 0 3px rgba(244, 63, 94, 0.1);
}

.search-icon {
  position: absolute;
  right: 16px;
  top: 50%;
  transform: translateY(-50%);
  color: #9ca3af;
  pointer-events: none;
}

/* Category Title */
.category-title {
  font-weight: 700;
  text-transform: capitalize;
}

/* FAQ Accordion */
.faq-category-group {
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.faq-accordion {
  max-height: 600px;
  overflow-y: auto;
  padding-right: 8px;
}

/* Custom Scrollbar */
.faq-accordion::-webkit-scrollbar {
  width: 6px;
}

.faq-accordion::-webkit-scrollbar-track {
  background: #f3f4f6;
  border-radius: 10px;
}

.faq-accordion::-webkit-scrollbar-thumb {
  background: #d1d5db;
  border-radius: 10px;
}

.faq-accordion::-webkit-scrollbar-thumb:hover {
  background: #9ca3af;
}

.faq-item {
  border-bottom: 1px solid;
  padding-bottom: 16px;
  margin-bottom: 16px;
}

.faq-item:last-child {
  border-bottom: none;
}

.faq-question {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  text-align: left;
  padding: 12px 0;
  border: none;
  background: transparent;
  cursor: pointer;
  font-size: 20px;
  font-weight: 500;
  transition: color 0.2s ease;
}

.faq-question:hover {
  color: var(--hover-color);
}

.faq-question:hover .chevron-icon {
  color: var(--hover-color);
}

.question-text {
  padding-right: 20px;
}

.chevron-icon {
  flex-shrink: 0;
  transition: transform 0.2s ease;
  stroke-width: 2;
}

.faq-item.active .chevron-icon {
  transform: rotate(180deg);
}

.faq-answer-wrapper {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
}

.faq-item.active .faq-answer-wrapper {
  max-height: 500px;
}

.faq-answer {
  padding-top: 8px;
  padding-bottom: 12px;
  line-height: 1.6;
  font-size: 18px;
}

/* No Results */
.no-results {
  text-align: center;
  padding: 64px 20px;
  font-size: 16px;
}

/* Empty Category Message */
.empty-category {
  text-align: center;
  padding: 40px 20px;
  color: #9ca3af;
  font-size: 15px;
}

/* Responsive */
@media (min-width: 1024px) {
.faq-layout {
    position: relative;
}
.faq-content {
    position: sticky;
    top: 100px;
}
}
@media (max-width: 1024px) {
  .faq-layout {
    flex-direction: column;
  }
    .faq-content {
    width: 100%;
}

  .faq-sidebar {
    width: 100% !important;
  }

  .faq-sidebar-inner {
    position: static;
  }

  .category-nav {
    flex-direction: row;
    flex-wrap: wrap;
  }

  .category-btn {
    flex: 1;
    min-width: 150px;
  }

  .sidebar-cta {
    margin-top: 24px;
  }
}

@media (max-width: 768px) {
  .faq-main-heading {
    font-size: 32px !important;
  }

  .category-title {
    font-size: 22px !important;
  }

  .faq-content-inner {
    padding: 20px !important;
  }

  .faq-sidebar-inner {
    padding: 20px !important;
  }

  .category-nav {
    flex-direction: column;
  }

  .category-btn {
    min-width: auto;
  }
}

@media (max-width: 480px) {
  .faq-section {
    padding-left: 12px !important;
    padding-right: 12px !important;
  }

  .faq-main-heading {
    font-size: 28px !important;
  }

  .search-label {
    font-size: 11px !important;
  }

  .faq-search-input {
    padding: 10px 40px 10px 12px;
    font-size: 14px;
  }
}
